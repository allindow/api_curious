<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="clearfix">
  <div class="modal-image" style="float: left">
    <%= image_tag(@media.pic.standard_url) %>
  </div>
  <div class="modal-text-head">
    <span>
      <%= image_tag current_user.profile_picture, {class: "small img-circle"} %>&nbsp&nbsp&nbsp&nbsp
      <strong><%= current_user.username %></strong>
    </span>
  </div>
  <p><strong><%= @media.pic.like_count %> likes</strong></p>
  <p><strong><%= current_user.username %></strong> <%= @media.pic.caption_text %></p>
  <% if @media.comments %>
    <% @media.comments.each do |comment| %>
      <p>
        <strong><%= comment.author %></strong> <%= comment.text %>
      </p>
    <% end %>
  <% end %>
</div>
